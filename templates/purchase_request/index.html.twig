{% extends 'base.html.twig' %}
{% block title %}Les demande d'achat{% endblock %}

{% block body %}
    <div class="container-md mt-5">
        {% for message in app.flashes('succes_purchase_request_create') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
        {% for message in app.flashes('succes_purchase_request_edit') %}
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
        {% for message in app.flashes('succes_purchase_request_delete') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
        <div class="row d-flex justify-content-between align-items-center">
            <div class="col-md-8">
                <h2>Les réunions</h2>
            </div>
            <div class="col-md-8">
                <a class="btn btn-info" href="{{ path('meeting_create') }}">Créer une demande d'achat</a>
            </div>
        </div>
        <div class="table-responsive mt-5">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th class="text-center">Date</th>
                    <th class="text-center">Nom</th>
                    <th class="text-center">option</th>
                </tr>
                </thead>
                <tbody>
                {% for PurchaseRequest in PurchaseRequests %}
                    <tr>
                        <td class="text-center"></td>
                        <td class="text-center"><a class="text-dark" target="_blank" rel="noopener noreferrer" href="#">{{ PurchaseRequest.name|capitalize }}</a></td>
                        <td class="center">
                            <div class="row d-flex justify-content-center">
                                <div class="mx-3">
                                    <a class="btn btn-warning" href="{{ path('purchase_request_edit', {'name': PurchaseRequest.name}) }}"><i class="fas fa-edit mr-1"></i>Éditer</a>
                                    <a class="btn btn-danger" href="{{ path('purchase_request_delete', {'name': PurchaseRequest.name}) }}"><i class="fas fa-trash mr-1"></i>Supprimer</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

